+/* a ctime() replacement that reads a 32bit timestamp, even when
+   time_t has a different size. */
+
+char *
+ctime32(tp)
+	int32_t *tp;
+{
+	time_t thetime = *tp;
+
+	return ctime(&thetime);
+}
+
